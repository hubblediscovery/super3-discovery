CREATE TABLE HUBBLE_APP_DATA (
	HUBBLE_APP_ID INT NOT NULL AUTO_INCREMENT,
	APP_ID INT NOT NULL,
	APP_BUNDLE_ID VARCHAR(2000) NOT NULL,
	APP_LAST_UPDATED_DATE DATETIME,
	APP_RELEASED_DATE DATETIME,
	APP_TITLE VARCHAR(2000) NOT NULL,
    APP_DESCRIPTION TEXT,
	APP_NAME VARCHAR(2000),
	APP_DEVELOPER_INFO VARCHAR(2000),
	APP_TYPE VARCHAR(2000),
	APP_PRIMARY_CATEGORY VARCHAR(2000),
	APP_SECONDARY_CATEGORY VARCHAR(2000),
	APP_UNIT_PRICE DECIMAL(10,4),
	APP_UNIT_CURRENCY VARCHAR(50),
	PRIMARY KEY(HUBBLE_APP_ID)
	/*UNIQUE KEY `UNI_HUBBLE_APP_ID` (`HUBBLE_APP_ID`) USING BTREE */
) ENGINE=InnoDB AUTO_INCREMENT=1;

ALTER TABLE HUBBLE_APP_DATA AUTO_INCREMENT = 1;

drop table HUBBLE_APP_DATA;
delete from HUBBLE_APP_DATA;
select * from HUBBLE_APP_DATA where app_title like "%Google%"
select count(*) from HUBBLE_APP_DATA;

Select HUBBLE_APP_ID FROM HUBBLE_ENRICHED_APP_DATA enrichedAppData,
HUBBLE_APP_DATA appData where

CREATE TABLE HUBBLE_ENRICHED_APP_DATA (
	HUBBLE_APP_ID INT NOT NULL,
	APP_ID INT NOT NULL,
	APP_KEYWORDS TEXT,
	CONSTRAINT `FK_HUBBLE_APP_ID` FOREIGN KEY (`HUBBLE_APP_ID`) 
    REFERENCES `HUBBLE_APP_DATA` (`HUBBLE_APP_ID`) ON DELETE CASCADE ON UPDATE CASCADE
) ENGINE=InnoDB

select * from HUBBLE_ENRICHED_APP_DATA
select count(*) from HUBBLE_ENRICHED_APP_DATA

select HUBBLE_APP_DATA.HUBBLE_APP_ID, HUBBLE_APP_DATA.APP_ID, HUBBLE_APP_DATA.APP_TITLE
FROM HUBBLE_APP_DATA join HUBBLE_ENRICHED_APP_DATA
where HUBBLE_APP_DATA.HUBBLE_APP_ID = HUBBLE_ENRICHED_APP_DATA.HUBBLE_APP_ID
AND HUBBLE_APP_DATA.APP_ID = HUBBLE_ENRICHED_APP_DATA.APP_ID
AND (HUBBLE_APP_DATA.APP_TITLE like '%Google%' 
OR HUBBLE_APP_DATA.APP_DESCRIPTION like '%Google%'
OR HUBBLE_ENRICHED_APP_DATA.APP_KEYWORDS like '%Google%'
) order by HUBBLE_APP_DATA.HUBBLE_APP_ID





SELECT table_schema hubble, 
sum( data_length + index_length ) / 1024 / 
1024 "Data Base Size in MB", 
sum( data_free )/ 1024 / 1024 "Free Space in MB" 
FROM information_schema.TABLES 
GROUP BY table_schema ; 

